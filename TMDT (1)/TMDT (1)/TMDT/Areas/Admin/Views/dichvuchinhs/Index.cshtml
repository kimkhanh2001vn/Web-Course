@model IEnumerable<TMDT.dichvuchinh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/js/jquery-2.2.3.min.js"></script>
<section class="content" data-category="@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                    <a href="/Admin/thues/Create" class="btn btn-success btn-lg" style="cursor: pointer">
                        Thêm mới
                    </a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="search-table" class="table table-bordered table-striped">

                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Content)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Images)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Content)
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.Images)" id="img_@item.id" class="img-thumbnail" style="cursor:pointer"
                                 alt="Alternate Text" width="100" onclick="selectImage('/dichvuchinhs/ChangeImage/@item.id',this.id)" />
                        </td>
                        <td>
                            <a href="/Admin/dichvuchinhs/Edit/@item.id" data-toggle="tooltip" data-placement="top" title="Sửa"><i class="fa fa-edit"></i></a> &nbsp;
                            <a href="/Admin/dichvuchinhs/Details/@item.id" data-toggle="tooltip" data-placement="top" title="Chi tiết"><i class="fa fa-list-alt"></i></a> &nbsp;
                            <span class="Delete" data-id="@item.id" style="cursor:pointer" data-toggle="tooltip" data-placement="top" title="Xóa">
                                <i class="fa fa-times-circle"></i>
                            </span> &nbsp;
                        </td>
                    </tr>
                        }

                    <tfoot>
                    </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- The Modal -->
    <!--  -------------------------  --->
</section>
