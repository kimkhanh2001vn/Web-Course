@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin EWON | Log in</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport"> <!-- Tell the browser to be responsive to screen width -->
    <link rel="stylesheet" href="/Areas/Admin/Resources//bootstrap/css/bootstrap.min.css"> <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css"> <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css"> <!-- Ionicons -->
    <link rel="stylesheet" href="/Areas/Admin/Resources//dist/css/AdminLTE.min.css"> <!-- Theme style -->
    <link rel="stylesheet" href="/Areas/Admin/Resources//plugins/iCheck/square/blue.css"> <!-- iCheck -->
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href=""><b>EWON</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg" style="font-size: 20px;padding: 0;color: #3c8dbc;">Đăng nhập</p>
            <form action="/Admin/Home/Login" method="post">
                <p class="login-box-msg" style="color:red;">@ViewBag.error</p>
                <div class="form-group has-feedback">
                    <input type="text" name="username" class="form-control" placeholder="Nhập tên người dùng" required="" />
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" name="password" class="form-control" placeholder="Nhập mật khẩu" required="" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" name="remember" value="on"> Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <a href="/Admin/Home/Register" class="text-center">Tạo tài khoản</a>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <script src="/Areas/Admin/Resources//plugins/jQuery/jquery-2.2.3.min.js"></script><!-- jQuery 2.2.3 -->
    <script src="/Areas/Admin/Resources//bootstrap/js/bootstrap.min.js"></script><!-- Bootstrap 3.3.6 -->
    <script src="/Areas/Admin/Resources//plugins/iCheck/icheck.min.js"></script><!-- iCheck -->
    <script src="~/Areas/Admin/Resources/js/sweetalert.js"></script>
    <script type="text/javascript">
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
    @if (TempData["CreateUserSucceed"] != null)
    {
        <script>
            $(function () {
                swal({
                    title: "Thành công",
                    text: "Đăng kí thành công. \nHãy liên hệ Admin để kích hoạt tài khoản của bạn.",
                    icon: "success"
                })
            })
        </script>
    }
</body>
</html>