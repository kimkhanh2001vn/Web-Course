@model IEnumerable<TMDT.ShopManagement>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    <section class="content" data-category="@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                        <a href="/Admin/Posts/Create" class="btn btn-success btn-lg" style="cursor: pointer">
                            Thêm mới
                        </a>
                    </div>

                    <!-- /.box-header -->
                    <div class="box-body">
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Shop.ShopName)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Image)
                                </th>*@
                                @*<th>
                                    @Html.DisplayNameFor(model => model.Url)
                                </th>*@
                                @*<th>
                                    @Html.DisplayNameFor(model => model.DisplayOrder)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Content)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.UserTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Payment)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Money)
                                </th>

                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Shop.ShopName)
                            </td>
                            @*<td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>*@
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.Image)" id="img_@item.ID" class="img-thumbnail" style="cursor:pointer" alt="Alternate Text" width="100" onclick="selectImage('Posts/ChangeImage/@item.ID',this.id)" />

                        </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.Url)
                            </td>*@
                            @*<td>
                                @Html.DisplayFor(modelItem => item.DisplayOrder)
                            </td>*@
                            <td class="text-center btn-active" data-id="@item.ID" style="cursor:pointer">
                                @if (item.Status == true)
                                {
                                    <span class="label label-success">Actived</span>
                                }
                                else
                                {
                                    <span class="label label-danger">Locked</span>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Content)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.UserTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Payment)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Money)
                            </td>

                            <td>
                                <a href="/Admin/ShopManagements/Edit/@item.ID" data-toggle="tooltip" data-placement="top" title="Sửa"><i class="fa fa-edit"></i></a> &nbsp;
                                <a href="/Admin/ShopManagements/Details/@item.ID" data-toggle="tooltip" data-placement="top" title="Chi tiết"><i class="fa fa-list-alt"></i></a> &nbsp;
                                <span class="Delete" data-id="@item.ID" style="cursor:pointer" data-toggle="tooltip" data-placement="top" title="Xóa">
                                    <i class="fa fa-times-circle"></i>
                                </span> &nbsp;
                            </td>
                        </tr>
                            }

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
    </section>