@model IEnumerable<TMDT.ChapterDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="content">
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
                <a href="/Admin/ChapterDetails/Create" class="btn btn-success btn-lg" style="cursor: pointer">
                    Thêm mới
                </a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="search-table" class="table table-bordered table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ChapterID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ChapterDetailsName)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChapterID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChapterDetailsName)
                    </td>
                    
                    <td>
                        <a href="/Admin/ChapterDetails/Edit/@item.ChapterDetailsID" data-toggle="tooltip" data-placement="top" title="Sửa"><i class="fa fa-edit"></i></a> &nbsp;
                        <a href="/Admin/ChapterDetails/Details/@item.ChapterDetailsID" data-toggle="tooltip" data-placement="top" title="Chi tiết"><i class="fa fa-list-alt"></i></a> &nbsp;
                        <span class="Delete" data-id="@item.ChapterDetailsID" style="cursor:pointer" data-toggle="tooltip" data-placement="top" title="Xóa">
                            <i class="fa fa-times-circle"></i>
                        </span> &nbsp;
                    </td>
                </tr>
                    }

                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
</section>