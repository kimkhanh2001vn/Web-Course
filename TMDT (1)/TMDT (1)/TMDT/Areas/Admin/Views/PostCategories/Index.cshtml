@model IEnumerable<TMDT.PostCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/js/jquery-2.2.3.min.js"></script>


<section class="content" data-category=@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                    <a href="/Admin/PostCategories/Create" class="btn btn-success btn-lg" style="cursor: pointer">
                        Thêm mới
                    </a>
                </div>
                <div class="box-body">
                    <table id="search-table" class="table table-bordered table-striped">
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Alias)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FreeCourseStatus)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Alias)
                                </td>


                                <td class="text-center btn-active" data-id="@item.ID" style="cursor:pointer">
                                    @if (item.Status == true)
                                    {
                                        <span class="label label-success">Actived</span>
                                    }
                                    else
                                    {
                                        <span class="label label-danger">Locked</span>
                                    }
                                </td>

                                <td class="text-center btn-Homeflag" data-id="@item.ID" style="cursor:pointer">
                                    @if (item.FreeCourseStatus == true)
                                    {
                                        <span class="label label-success">Actived</span>
                                    }
                                    else
                                    {
                                        <span class="label label-danger">Locked</span>
                                    }
                                </td>

                                <td>
                                    <a href="/Admin/PostCategories/Edit/@item.ID" data-toggle="tooltip" data-placement="top" title="Sửa"><i class="fa fa-edit"></i></a> &nbsp;
                                    <a href="/Admin/PostCategories/Details/@item.ID" data-toggle="tooltip" data-placement="top" title="Chi tiết"><i class="fa fa-list-alt"></i></a> &nbsp;
                                
                                    <span class="Delete" data-id="@item.ID" style="cursor:pointer" data-toggle="tooltip" data-placement="top" title="Xóa">
                                        <i class="fa fa-times-circle"></i>
                                    </span> &nbsp;
                                </td>

                            </tr>
                        }

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- The Modal -->
    <!--  -------------------------  --->
</section>


@section scripts{
    <script>
        $('#search-table').DataTable();
    </script>
    <script src="~/Areas/Admin/Resources/js/ChangesStatus/ChangeHomeFlag.js"></script>
    <script src="~/Areas/Admin/Resources/js/ChangesStatus/ChangeStatus.js"></script>
}

