@model List<Post>
    @{ 
        Layout = null;
    }
    <div id="search_result_container" >
        @foreach (var item in Model)
        {
        <div data-post-id="@item.ID" class="search-item-D" style="display:flex;padding:10px">
            <img style="max-width:60px;max-height:60px;margin-right:5px" src="@item.Image" />
            <div class="result-info col-md-8" style="position:relative">
                <p style="margin:0">@item.Name</p>
                <p style="position:absolute;bottom:0;margin:0">@item.PostCategory.Name</p>
            </div>
            <div class="result-delete">x</div>
        </div>
        }
    </div>
