@model IEnumerable<TMDT.Chapter>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@*<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
    <section class="content" data-category="@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                        <a href="/Admin/Chapters/Create" class="btn btn-success btn-lg" style="cursor: pointer">
                            Thêm mới
                        </a>
                    </div>
                    <div class="box-body">
                        <table id="search-table" class="table table-bordered table-striped">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CourseID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ChapterName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.id)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ChapterName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.id)
                                    </td>
                                    <td>
                                        <a href="/Admin/Chapters/Edit/@item.ChapterID" data-toggle="tooltip" data-placement="top" title="Sửa"><i class="fa fa-edit"></i></a> &nbsp;
                                        <a href="/Admin/Chapters/Details/@item.ChapterID" data-toggle="tooltip" data-placement="top" title="Chi tiết"><i class="fa fa-list-alt"></i></a> &nbsp;
                                        <span class="Delete" data-id="@item.ChapterID" style="cursor:pointer" data-toggle="tooltip" data-placement="top" title="Xóa">
                                            <i class="fa fa-times-circle"></i>
                                        </span> &nbsp;
                                    </td>
                                    @*<td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ChapterID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ChapterID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ChapterID })
                                    </td>*@
                                </tr>
                            }

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
    </section>